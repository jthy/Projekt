<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xs="http://www.w3.org/2001/XMLSchema" >
<xs:element name="Bestellungen">
<xs:complexType>
<xs:sequence>
<xs:element name="Bestellungs_ID" type ="xs:integer">
	<xs:complexType>
		<xs:sequence>
			<xs:element name="Lieferdatum" type="xs:date"/>
			<xs:element ref="person_type"/>
			<xs:element ref="person_type"/>
			<xs:element ref="betrieb_type"/>
			<xs:element ref="betrieb_type"/>
			<xs:element type="xs:integer"/>
			<xs:element ref="Produkt_type"/>
			<xs:element name="Bestellungsart">
				<xs:simpleType>
    				<xs:restriction base="xs:string">
        				<xs:enumeration value="Dauerauftrag"/>
						<xs:enumeration value="Einmalige_Bestellung"/>
					</xs:restriction>
				</xs:simpleType>                         
			</xs:element>
			<xs:element name="Zahlungsart">
  				<xs:simpleType>
    				<xs:restriction base="xs:string">
      					<xs:enumeration value="Rechnung" />
      					<xs:enumeration value="Lastschrift" />
      					<xs:enumeration value="Vorkasse" />
      					<xs:enumeration value="PayPal" />
      					<xs:enumeration value="Kreditkarte" />
   				 	</xs:restriction>
  				</xs:simpleType>
			</xs:element>			
			<xs:element name="Gesamtbetrag_Bestellung" type="xs:integer"/>
		</xs:sequence>
	</xs:complexType>
</xs:element>
<xs:element name="Gesamtbetrag" type="xs:integer"/>


<xs:element name="person_type">
	<xs:complexType>
		<xs:sequence>
			<xs:element name="Vorname" />
			<xs:element name="Nachname"/>
			<!-- Gastronom muss über 18 sein um Käufe abzuwickeln -->
			<xs:element name="Alter">
				<xs:simpleType>
					<xs:restriction base="xs:integer">
						<xs:minInclusive value="18" />
						<xs:maxInclusive value="100" />
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<!-- jeder Gastronom kann mehrere Restaurants besitzen -->
			<xs:element name="betrieb_type" minOccurs="1" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Betriebname" minOccurs="1" maxOccurs="1" />
						<xs:element name="Adresse">
							<xs:complexType>
								<xs:sequence>
									<xs:element name="Straße"/>
									<xs:element name="PLZ">
										<xs:simpleType>
											<xs:restriction base="xs:integer">
											<xs:pattern value="(D )?[0-9]{5}" />
											</xs:restriction>
										</xs:simpleType>
									</xs:element>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
				<xs:element name="Produkt_type">	
				<xs:complexType >
					<xs:sequence>
						<xs:element name="Produkt_ID" />
						<xs:element name="Produktname" />
						<xs:element name="Preis_in_Euro" />
						<xs:element name="Beschreibung" />
					</xs:sequence>
				</xs:complexType>
				</xs:element>	
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:sequence>
</xs:complexType>
</xs:element>

</xs:sequence>
</xs:complexType>
</xs:element>
</schema>